<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.myonetext.activity.ProductLookdetails">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#fff"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/re_clickBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:drawableLeft="@mipmap/dp_fh2"
            android:text="返回"
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="产品详情"
            android:textColor="#000"
            android:textSize="20dp" />

    </RelativeLayout>
  <ImageView
      android:id="@+id/picture"
      android:layout_width="match_parent"
      android:layout_height="122dp"
      android:src="@mipmap/ic_launcher"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="horizontal">
<TextView
    android:id="@+id/name"
    android:textColor="#000"
    android:textSize="18sp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="产品名称"/>
    </LinearLayout>
<RelativeLayout
    android:paddingBottom="20dp"
    android:layout_marginLeft="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        />
<TextView
    android:id="@+id/num"
    android:paddingLeft="10dp"
    android:layout_toRightOf="@id/score"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="5分  已售6份"
    />
    <TextView
        android:paddingLeft="15dp"
        android:layout_toRightOf="@id/num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="改评分来自综合评估"
        />
</RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#bebebe"/>
    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/location"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/xq_dw2x"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_margin="12dp"
           android:id="@+id/adress"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="广西省青州市北部湾"
            />
        <ImageView
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:background="#bebebe"/>
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/phone"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:src="@mipmap/xq_sj2x"/>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#bebebe"/>
        <RadioGroup
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:textSize="18sp"
                android:textColor="@drawable/product_lookdetails_backg"
                android:id="@+id/Details_introduction"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:button="@null"
                android:gravity="center"
                android:background="#fff"
                android:text="详情介绍"
                />

            <RadioButton
                android:textSize="18sp"
                android:textColor="@drawable/product_lookdetails_backg"
                android:id="@+id/Specification_parameter"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:button="@null"
                android:gravity="center"
                android:background="#fff"
                android:text="规格参数" />
    </RadioGroup>
<WebView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/webView"></WebView>
</LinearLayout>
