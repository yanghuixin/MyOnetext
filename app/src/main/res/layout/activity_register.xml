<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.myonetext.activity.RegisterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#fff"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/re_clickBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:drawableLeft="@mipmap/dp_fh2"
            android:text="返回"
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="注册"
            android:textColor="#000"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/threespot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/fj_gd2" />
    </RelativeLayout>

    <TextView
        android:paddingTop="16dp"
        android:paddingLeft="12dp"
        android:paddingBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册即代表阅读并同意使用条款和隐私政策" />

    <RelativeLayout
        android:layout_marginLeft="29dp"
        android:layout_marginRight="37dp"
        android:id="@+id/re_start_city"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/text_label_start_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="国家/地区"
            android:textColor="#414141"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/text_label_start_city"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#5d5d5d"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/choseCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text=">"
            android:textColor="#000"
            android:textSize="20sp" />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_divider" />

    <LinearLayout
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text=" +86"
            android:textColor="#000" />

        <EditText
            android:id="@+id/phoneNum_rigister"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:digits="1234567890"
            android:inputType="phone"
            android:maxLength="11" />

        <TextView
            android:id="@+id/sendsmsNum"
            android:layout_width="83dp"
            android:layout_height="27dp"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:text="发送验证码"
            android:textColor="#000" />
    </LinearLayout>
    <LinearLayout

        android:paddingBottom="10dp"
       android:layout_marginRight="26dp"
       android:layout_marginLeft="26dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="短信验证码："
           android:textColor="#000"/>
       <EditText
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="wrap_content"
           android:id="@+id/smsCode_rigist"/>
   </LinearLayout>
    <LinearLayout

        android:paddingBottom="10dp"
        android:layout_marginRight="26dp"
        android:layout_marginLeft="26dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置用户名："
            android:textColor="#000"/>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/name_rigist"/>
    </LinearLayout>
    <LinearLayout

        android:paddingBottom="10dp"
        android:layout_marginRight="26dp"
        android:layout_marginLeft="26dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录   密码："
            android:textColor="#000"/>
        <EditText
            android:inputType="textPassword"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/pwd_rigist"/>
    </LinearLayout>
    <LinearLayout

        android:paddingBottom="10dp"
        android:layout_marginRight="26dp"
        android:layout_marginLeft="26dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认   密码："
            android:textColor="#000" />

        <EditText
            android:inputType="textPassword"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/surePwd_rigist"/>
    </LinearLayout>
    <Button
        android:id="@+id/finish"
        android:layout_gravity="center_horizontal"
        android:layout_width="305dp"
        android:layout_height="42dp"
        android:text="完成"
        android:background="@drawable/textview_border"/>
</LinearLayout>
