<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/hour_ten"
        style="@style/timecount_text"
        android:text="0"
        />

    <TextView
        android:id="@+id/hour_bits"
        style="@style/timecount_text"
        android:layout_marginLeft="2dp"
        android:text="0"
        />
    <TextView
        android:id="@+id/tv_splite_1"
        android:layout_width="9dp"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:gravity="center"
        android:textSize="15sp"
        android:text=":"/>
    <TextView
        android:id="@+id/min_ten"
        style="@style/timecount_text"
        android:text="0"
        />
    <TextView
        android:id="@+id/min_bits"
        style="@style/timecount_text"
        android:layout_marginLeft="2dp"
        android:text="0"
        />
    <TextView
        android:id="@+id/tv_splite_2"
        android:layout_width="9dp"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:gravity="center"
        android:textSize="15sp"
        android:text=":"/>
    <TextView
        android:id="@+id/second_ten"
        style="@style/timecount_text"
        android:text="0"
        />
    <TextView
        android:id="@+id/second_bits"
        style="@style/timecount_text"
        android:layout_marginLeft="2dp"
        android:text="0"
        />

</LinearLayout>